<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/beijing1" >
 	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.8"
		android:orientation="vertical"> 

  	 	<LinearLayout
  	 	    android:layout_width="match_parent"
  	 	    android:layout_height="wrap_content"
  	 	    android:layout_marginTop="3dp"
  	 	    android:orientation="horizontal" >

			<Button 
				android:id="@+id/switch_bt"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:gravity="center_horizontal"
				android:layout_gravity="center_vertical"
				android:background="@drawable/home"
				android:layout_marginLeft="10dp"/>
			<TextView 
				android:layout_width="30dp"
				android:layout_height="wrap_content"
				android:layout_weight="3"
				android:visibility="invisible"/>
			<Button 
				android:id="@+id/refresh_bt"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:background="@drawable/refresh"
				android:gravity="center_horizontal"
				android:layout_gravity="center_vertical"
				android:layout_marginRight="10dp"/>
		</LinearLayout>
	</LinearLayout> 
	<View 
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#f6f8fa"
		android:visibility="visible"/>  
	<LinearLayout 
	    android:id="@+id/current_layout"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="5"
		android:orientation="vertical"
		>     
		<TextView 
			android:id="@+id/city_name"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:textColor="#fff"
			android:textSize="30sp"
			android:text="安庆市"
			android:gravity="center|bottom"
			android:layout_weight="1"/>
		<TextView 
			android:id="@+id/weather_info"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:textColor="#fff"
			android:textSize="20sp"
			android:text="晴朗"
			android:gravity="center"
			android:layout_weight="0.5"/>

	    <TextView
	        android:id="@+id/current_wendu"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.66"
	        android:text="28"
	        android:textColor="#fff"
	        android:textSize="80sp"
	        android:gravity="top|center"/>
     	 
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_gravity="center_horizontal"
			android:layout_weight="0.5"
			android:orientation="horizontal" >

			<TextView
			    android:id="@+id/current_date"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_gravity="center"
			    android:layout_marginLeft="10dp"
			    android:gravity="center|left|bottom"
			    android:text="星期一"
			    android:textColor="#fff"
			    android:textSize="13sp" />

			<TextView 
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_weight="2"
				android:visibility="visible"
				android:textColor="#fff"
				android:gravity="center|left|bottom"
				android:layout_marginLeft="5dp"
				android:text="今天"/> 
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" 
                android:layout_marginRight="10dp"> 
 				<TextView 
					android:id="@+id/low"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:textColor="#fff"
					android:text="20"
					android:textSize="15sp"
					android:layout_weight="1"
					android:gravity="center|bottom"/> 
				<TextView 
					android:id="@+id/high"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:textColor="#fff"
					android:text="20"
					android:textSize="15sp"
					android:layout_weight="1"
					android:gravity="center|bottom"/>
			</LinearLayout>  
		</LinearLayout>        
	</LinearLayout>
  	<View 
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#f6f8fa"
		android:visibility="visible"/> 
 	<LinearLayout
 	    android:id="@+id/fengli_layout"
 	    android:layout_width="match_parent"
 	    android:layout_height="0dp"
 	    android:layout_weight="1.87"
 	    android:orientation="vertical" >

		<TextView 
 	        android:id="@+id/fengli"
 	        android:layout_width="match_parent"
 	        android:layout_height="0dp"
 	        android:textColor="#fff"
 	        android:text="微风5级"
 	        android:layout_weight="1"
 	        android:layout_marginLeft="10dp"
 	        android:gravity="center|left"/>
		<TextView 
 	        android:id="@+id/ganmao"
 	        android:layout_width="match_parent"
 	        android:layout_height="0dp"
 	        android:textColor="#fff"
 	        android:text="感冒指数"
 	        android:layout_weight="2"
 	        android:layout_marginLeft="10dp"
 	        android:gravity="center|left"/>
	</LinearLayout>
	<View 
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#f6f8fa"
		android:visibility="visible"/> 
   <ListView
       android:id="@+id/listview"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="3.12"
       android:divider="@null"
       android:layout_gravity="center"
       android:layout_marginTop="10dp">
       
   </ListView>
    

</LinearLayout>
